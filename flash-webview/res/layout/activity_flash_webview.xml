<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlashWebview" >

	<Button 
	    android:id="@+id/btn_webplayer"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/play_flash_in_web"/>
	<Button
	    android:id="@+id/btn_viewpager"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/viewpager_webview_flash"
	    android:layout_below="@id/btn_webplayer"/>
	<Button
	    android:id="@+id/btn_load_file"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/webview_load_file"
	    android:layout_below="@id/btn_viewpager"/>
</RelativeLayout>